<h1>Books</h1>

<p>title</p>
<p>body</p>
<% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <%= link_to （'Show', book_path(＠book)） %>
  
  
<% end %>

<h2>New Book</h2>
<%= form_with model: @book, url: '/', method: :post, local: true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>