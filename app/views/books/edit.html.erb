<h1>Edit Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  
  <%= link_to 'Show', book_path(book) %>
  <%= link_to 'start', books_index_path %>
<% end %>